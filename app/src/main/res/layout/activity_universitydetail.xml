<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.universitydetail">

    <FrameLayout
        android:background="@color/brown"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/backpic" />

    </FrameLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/univname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textIsSelectable="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="190dp"
                android:fontFamily="casual"
                android:text="University name "
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/alphaTwoCode"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:text="IN "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/source_sans_pro"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="italic|bold"
                android:textAllCaps="true"
                android:text=" country : india "/>




        </LinearLayout>


        <TextView
            android:id="@+id/weblink"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textIsSelectable="true"
            android:fontFamily="@font/source_sans_pro"
            android:text=" webPages : www.mait.com "
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/domains"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:textIsSelectable="true"
            android:fontFamily="@font/source_sans_pro"
            android:layout_marginTop="0dp"
            android:text=" Domains : davietjal.org "
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic|bold" />


    </LinearLayout>






</LinearLayout>